<?xml version="1.0" encoding="UTF-8"?>
<settings>
    <category label="General">
        <setting id="torrenter_host" type="text"
                 label="Torrenter host" default="localhost" />
        <setting id="download_folder" type="folder"
                 label="Folder for downloading files" default="" />
        <setting id="buffer_size" type="number"
                 label="Buffer size (%)" default="5"/>
        <setting id="ratio_limit" type="labelenum"
                 label="Seeding ratio limit (0 - no limit)" values="0|1|1.5|2|3|4|5" default="1.5" />
        <setting id="time_limit" type="number"
                 label="Seeding time limit in hours (0 - no limit)" default="0" />
    </category>
</settings>
